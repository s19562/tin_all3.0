<%- include('../fragments/header.ejs') %>

    <main>
        <h2>Lista wyrobów</h2>

        <table class = "table-list">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Cena za sztukę</th>
                    <th>Akcje</th>
                </tr>
            </thead>

            <tbody>
                <% for (let wyrob of wyroby) { %>
                    <tr>
                        <td><%= wyrob.name %></td>
                        <td><%= wyrob.cenaSz %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/wyroby/details/<%=wyrob._id%>" class="list-actions-button-details">Szczegóły</a></li>
                                <li><a href="/wyroby/edit/<%=wyrob._id%>" class="list-actions-button-edit">Edytuj</a></li>
                                <li><a href="/wyroby/delete/<%=wyrob._id%>" class="list-actions-button-delete">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
                </tbody>


        </table>

        <p><a href="wyroby/add" class="button-add">Dodaj nowy wyrób</a></p>

    </main>

    <%- include('../fragments/footer.ejs') %>
