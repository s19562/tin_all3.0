<%- include('../fragments/header.ejs') %>

    <main>
        <h2>Lista klientów</h2>

        <table class = "table-list">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Numer telefonu</th>
                    <th>Uwagi</th>
                    <th>Akcje</th>

                </tr>
            </thead>

            <tbody>
                <% for (let kli of klis) { %>
                    <tr>
                        <td><%= kli.firstName %></td>
                        <td><%= kli.lastName %></td>
                        <td><%= kli.nrTel %></td>
                        <td><%= kli.uwagi %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/klienci/details/<%=kli._id%>" class="list-actions-button-details">Szczegóły</a></li>
                                <li><a href="/klienci/edit/<%=kli._id%>" class="list-actions-button-edit">Edytuj</a></li>
                                <li><a href="/klienci/delete/<%=kli._id%>" class="list-actions-button-delete">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
                </tbody>


        </table>

        <p><a href="/klienci/add" class="button-add">Dodaj nowego klienta</a></p>

    </main>

    <%- include('../fragments/footer.ejs') %>