<%- include('../fragments/header.ejs') %>

    <main>
        <h2>Lista zamówień</h2>

        <table class = "table-list">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Wyrób cukierniczy</th>
                    <th>Ilość</th>
                    <th>Akcje</th>

                </tr>
            </thead>

            <tbody>
                <% for (let zamowienie of zamowienia) { %>
                    <tr>
                        <td><%= zamowienie.klient.firstName %></td>
                        <td><%= zamowienie.klient.lastName %></td>
                        <td><%= zamowienie.wyrob.name %></td>
                        <td><%= zamowienie.ilosc %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/zam/details/<%=zamowienie._id%>" class="list-actions-button-details">Szczegóły</a></li>
                                <li><a href="/zam/edit/<%=zamowienie._id%>" class="list-actions-button-edit">Edytuj</a></li>
                                <li><a href="/zam/delete/<%=zamowienie._id%>" class="list-actions-button-delete">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
                </tbody>


        </table>

        <p><a href="zam/add" class="button-add">Dodaj nowe zamówienie</a></p>

    </main>

    <%- include('../fragments/footer.ejs') %>